@using Domain.Dtos;
@model CreateCommentViewModel

<form asp-controller="Comment" asp-action="CreateComment" method="post">
    <div class="mb-3">
        <div class="input-group">
            <div class="form-floating">
                <input asp-for="Content" type="text" class="form-control" placeholder="Введите комментарий" />
                <label asp-for="Content" class="form-label w-50">Комментарий</label>
                <input asp-for="ArticleId" value="@Model.ArticleId" hidden="hidden"/>
            </div>
        </div>
        <span class="text-danger" asp-validation-for="Content"></span>
    </div>
    <div class="text-danger mb-2">@ViewBag.Error</div>
    <input type="submit" value="Отправить" class="btn btn-outline-success w-50 mb-3">
</form>