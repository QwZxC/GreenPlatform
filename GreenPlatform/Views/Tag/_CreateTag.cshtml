@using Domain.Dtos;
@model CreateTagViewModel;

<form asp-action="CreateTag" method="post" class="ms-3 d-flex flex-row flex-fill">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="d-flex flex-column align-content-start">
        <h2><label class="col-form-label-lg" asp-for="Name"></label></h2>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <input type="submit" value="Добавить" class="btn ms-3 btn-success align-self-end btn-lg float-end" />
</form>