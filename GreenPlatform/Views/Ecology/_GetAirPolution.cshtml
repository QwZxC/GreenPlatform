@using Domain.Dtos;
@model GetAirPolutionRequest;

<div class="ms-3 mb-3 card">
    <table class="table material-table">
        <thead>
            <tr>
                <th>Качество</th>
                <th>Индекс</th>
                <th colspan="6">
                    <text>Концентрация загрязняющих веществ в μg/m<sup>3</sup></text>
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td colspan="2"></td>
                <td>SO<sub>2</sub></td>
                <td>NO<sub>2</sub></td>
                <td>PM<sub>10</sub></td>
                <td>PM<sub>2.5</sub></td>
                <td>O<sub>3</sub></td>
                <td>CO</td>
            </tr>
            <tr>
                <td>Отличное</td>
                <td>1</td>
                <td>[0; 20)</td>
                <td>[0; 40)</td>
                <td>[0; 20)</td>
                <td>[0; 10)</td>
                <td>[0; 60)</td>
                <td>[0; 4400)</td>
            </tr>
            <tr>
                <td>Хорошее</td>
                <td>2</td>
                <td>[20; 80)</td>
                <td>[40; 70)</td>
                <td>[20; 50)</td>
                <td>[10; 25)</td>
                <td>[60; 100)</td>
                <td>[4400; 9400)</td>
            </tr>
            <tr>
                <td>Умеренный</td>
                <td>3</td>
                <td>[80; 250)</td>
                <td>[70; 150)</td>
                <td>[50; 100)</td>
                <td>[25; 50)</td>
                <td>[100; 140)</td>
                <td>[9400-12400)</td>
            </tr>
            <tr>
                <td>Плохое</td>
                <td>4</td>
                <td>[250; 350)</td>
                <td>[150; 200)</td>
                <td>[100; 200)</td>
                <td>[50; 75)</td>
                <td>[140; 180)</td>
                <td>[12400; 15400)</td>
            </tr>
            <tr>
                <td>Ужасное</td>
                <td>5</td>
                <td>⩾350</td>
                <td>⩾200</td>
                <td>⩾200</td>
                <td>⩾75</td>
                <td>⩾180</td>
                <td>⩾15400</td>
            </tr>
        </tbody>
    </table>
</div>

<div class="card d-flex flex-column ms-3">
    <form asp-action="GetAirPolutionInfo"
          method="get">
          <div class="text-danger mt-3" asp-validation-summary="ModelOnly"></div>
          <div class="m-3">
              <label asp-for="City"></label>
              <input asp-for="City" class="form-control" />
              <span asp-validation-for="City" class="text-danger"></span>
          </div>
          <div class="row m-3">
              <div class="col-4">
                  <input type="submit" value="Получить" class="btn btn-success btn-sm float-end" />
              </div>
          </div>
    </form>
</div>